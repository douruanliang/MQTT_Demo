<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_face_container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <io.dourl.mqtt.ui.widge.EmojiconPagerView
        android:id="@+id/pager_view"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        />

    <io.dourl.mqtt.ui.widge.EmojiconIndicatorView
        android:id="@+id/indicator_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CFCFCF"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <io.dourl.mqtt.ui.widge.EmojiconScrollTabBar
            android:id="@+id/tab_bar"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_toLeftOf="@+id/emoji_send"
            />

        <TextView
            android:id="@+id/emoji_send"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/color_3d96ff"
            android:gravity="center"
            android:text="@string/send"
            android:textColor="@color/white"/>

    </RelativeLayout>


</LinearLayout>