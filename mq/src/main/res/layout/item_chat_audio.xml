<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/leftTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:textColor="@color/color_5d697f"
        android:textSize="16sp"/>

    <RelativeLayout
        android:id="@+id/rlBackground"
        android:layout_width="160dp"
        android:layout_height="@dimen/chat_avatarSize"
        android:background="@drawable/round_corner_rect_green"
        android:clickable="true">

        <ImageView
            android:id="@+id/imgPlayView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:src="@drawable/audio_play_out"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/rightTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/color_5d697f"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/isRead"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/red_circle_bg"/>

</LinearLayout>